{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
      "myLabName":{
            "type":"string"
        },
        "SVR12Prefix":{
            "type":"string"
        },
        "svr12Count":{
            "type":"int"
        },
        "svr2012Size": {
            "type": "string"
        },
        "svr2012OSDiskType": {
            "type": "string"
        },
        "domainName":{
            "type":"string"
        },
        "adminUsername": {
            "type": "string"
        },
        "adminPassword": {
            "type": "secureString"
        },
        "azurePlatform":{
            "type":"string"
        },
        "saName": {
            "type": "string"
        }

  },
  "variables": {
      "labvNetName": "[concat(parameters('myLabName'), '-vNET')]",
      "nsgName": "[concat(parameters('myLabName'), '-NSG')]",
      "domainJoinOption": 3,
      "subnetName": "Domain"
  },
  "resources": [
    {
        "name": "[concat(parameters('SVR12Prefix'), copyIndex(), '-PIP')]",
        "type": "Microsoft.Network/publicIPAddresses",
        "apiVersion": "2019-07-01",
        "location": "[resourceGroup().location]",
        "copy":{
            "name":"SVR2012PIPcopy",
            "count":"[parameters('svr12Count')]"
        },
        "properties": {
            "publicIPAllocationMethod": "Dynamic"
        }
    },
    {
        "name": "[concat(parameters('SVR12Prefix'), copyIndex(), '-NIC')]",
        "type": "Microsoft.Network/networkInterfaces",
        "apiVersion": "2019-07-01",
        "location": "[resourceGroup().location]",
        "copy":{
            "name":"SVR2012NICcopy",
            "count":"[parameters('svr12Count')]"
        },
        "dependsOn": [
            "[concat(parameters('SVR12Prefix'), copyIndex(), '-PIP')]"
        ],
        "properties": {
            "ipConfigurations": [
                {
                    "name": "ipConfig",
                    "properties": {
                        "privateIPAllocationMethod": "Dynamic",
                        "publicIPAddress": {
                            "id": "[resourceId('Microsoft.Network/publicIPAddresses', concat(parameters('SVR12Prefix'), copyIndex(), '-PIP'))]"
                        },
                        "subnet": {
                            "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('labvNetName'), variables('subnetName'))]"
                        }
                    }
                }
            ],
            "networkSecurityGroup": {
                    "id": "[resourceId('Microsoft.Network/networkSecurityGroups/', variables('nsgName'))]"
            }
        }
    },
    {
        "comments": "createSVR2012",
        "name": "[concat(parameters('SVR12Prefix'), copyIndex())]",
        "type": "Microsoft.Compute/virtualMachines",
        "apiVersion": "2019-07-01",
        "location": "[resourceGroup().location]",
        "copy":{
            "name":"SVR2012VMcopy",
            "count":"[parameters('svr12Count')]"
        },
        "dependsOn":[
            "[concat('Microsoft.Network/networkInterfaces/', parameters('SVR12Prefix'), copyIndex(), '-NIC')]"
        ],
        "properties": {
            "hardwareProfile": {
                "vmSize": "[parameters('svr2012Size')]"
        },
        "osProfile": {
            "computerName": "[concat(parameters('SVR12Prefix'), copyIndex())]",
            "adminUsername": "[parameters('adminUserName')]",
            "adminPassword": "[parameters('adminPassword')]"
        },
        "storageProfile": {
            "osDisk": {
                "name":"[concat(parameters('SVR12Prefix'), copyIndex(), 'sys')]",
                "createOption": "fromImage",
                "managedDisk": {
                    "storageAccountType": "[parameters('svr2012OSDiskType')]"
                }
            },
            "imageReference": {
                "publisher": "MicrosoftWindowsServer",
                "offer": "WindowsServer",
                "sku": "2012-R2-Datacenter-smalldisk",
                "version": "latest"
            }
        },
        "networkProfile": {
            "networkInterfaces": [
                {
                    "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('SVR12Prefix'), copyIndex(), '-NIC'))]"
                }
            ]
        },
        "licenseType": "Windows_Server",
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true,
                        "storageUri": "[concat('https://', parameters('saName'), parameters('azurePlatform'))]"
                    }
                }
      }
    },
    {
        "comments": "Join SVR2012 to Domain",
        "type": "Microsoft.Compute/virtualMachines/extensions",
        "name": "[concat(parameters('SVR12Prefix'), copyIndex(), '/joindomain')]",
        "apiVersion": "2019-07-01",
        "location": "[resourceGroup().location]",
        "copy":{
            "name":"SVR2012VMDomainJoincopy",
            "count":"[parameters('svr12Count')]"
        },
        "tags": {
            "displayName": "JsonADDomainExtension"
        },
        "dependsOn": [
            "[concat('Microsoft.Compute/virtualMachines/',parameters('SVR12Prefix'), copyIndex())]"
        ],
        "properties": {
            "publisher": "Microsoft.Compute",
            "type": "JsonADDomainExtension",
            "typeHandlerVersion": "1.3",
            "autoUpgradeMinorVersion": "true",
            "settings": {
                "Name": "[parameters('domainName')]",
                "User": "[concat(parameters('adminUserName'),'@',parameters('domainName'))]",
                "Restart": "true",
                "Options": "[variables('domainJoinOption')]"
            },
            "protectedSettings": {
                "Password": "[parameters('adminPassword')]"
        }
      }
    }
  ],
  "outputs": {},
  "functions": []
}