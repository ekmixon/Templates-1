{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "myLabName":{
              "type":"string"
          },
          "WIN10Prefix":{
              "type":"string"
          },
          "WIN10Count":{
              "type":"int"
          },
          "WIN10Size": {
              "type": "string"
          },
          "WIN10OSDiskType": {
              "type": "string"
          },
          "domainName":{
              "type":"string"
          },
          "adminUsername": {
              "type": "string"
          },
          "adminPassword": {
              "type": "secureString"
          },
          "azurePlatform":{
              "type":"string"
          }
    },
    "variables": {
      "storageAccountName": "[concat(parameters('myLabName'), 'dsa')]",
      "labvNetName": "[concat(parameters('myLabName'), '-vNET')]",
      "nsgName": "[concat(parameters('myLabName'), '-NSG')]",
      "domainJoinOption": 3,
      "subnetName": "Domain"
    },
    "resources": [
      {
          "name": "[concat(parameters('WIN10Prefix'), copyIndex(), '-PIP')]",
          "type": "Microsoft.Network/publicIPAddresses",
          "apiVersion": "2019-06-01",
          "location": "[resourceGroup().location]",
          "copy":{
              "name":"WIN10PIPcopy",
              "count":"[parameters('WIN10Count')]"
          },
          "properties": {
              "publicIPAllocationMethod": "Dynamic"
          }
      },
      {
          "name": "[concat(parameters('WIN10Prefix'), copyIndex(), '-NIC')]",
          "type": "Microsoft.Network/networkInterfaces",
          "apiVersion": "2019-06-01",
          "location": "[resourceGroup().location]",
          "copy":{
              "name":"WIN10NICcopy",
              "count":"[parameters('WIN10Count')]"
          },
          "dependsOn": [
              "[concat(parameters('WIN10Prefix'), copyIndex(), '-PIP')]"
          ],
          "properties": {
              "ipConfigurations": [
                  {
                      "name": "ipConfig",
                      "properties": {
                          "privateIPAllocationMethod": "Dynamic",
                          "publicIPAddress": {
                              "id": "[resourceId('Microsoft.Network/publicIPAddresses', concat(parameters('WIN10Prefix'), copyIndex(), '-PIP'))]"
                          },
                          "subnet": {
                              "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('labvNetName'), variables('subnetName'))]"
                          }
                      }
                  }
              ],
              "networkSecurityGroup": {
                      "id": "[resourceId('Microsoft.Network/networkSecurityGroups/', variables('nsgName'))]"
              }
          }
      },
      {
          "comments": "createWIN10",
          "name": "[concat(parameters('WIN10Prefix'), copyIndex())]",
          "type": "Microsoft.Compute/virtualMachines",
          "apiVersion": "2019-07-01",
          "location": "[resourceGroup().location]",
          "copy":{
              "name":"WIN10VMcopy",
              "count":"[parameters('WIN10Count')]"
          },
          "dependsOn":[
              "[concat('Microsoft.Network/networkInterfaces/', parameters('WIN10Prefix'), copyIndex(), '-NIC')]"
          ],
          "properties": {
              "hardwareProfile": {
                  "vmSize": "[parameters('WIN10Size')]"
          },
          "osProfile": {
              "computerName": "[concat(parameters('WIN10Prefix'), copyIndex())]",
              "adminUsername": "[parameters('adminUserName')]",
              "adminPassword": "[parameters('adminPassword')]"
          },
          "storageProfile": {
              "osDisk": {
                  "name":"[concat(parameters('WIN10Prefix'), copyIndex(), 'sys')]",
                  "createOption": "fromImage",
                  "managedDisk": {
                      "storageAccountType": "[parameters('WIN10OSDiskType')]"
                  }
              },
              "imageReference": {
                  "publisher": "MicrosoftWindowsDesktop",
                  "offer": "Windows-10",
                  "sku": "21h1-entn",
                  "version": "latest"
              }
          },
          "networkProfile": {
              "networkInterfaces": [
                  {
                      "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('WIN10Prefix'), copyIndex(), '-NIC'))]"
                  }
              ]
          },
          "diagnosticsProfile": {
              "bootDiagnostics": {
                  "enabled": true,
                  "storageUri": "[concat('https://', variables('storageAccountName'), parameters('azurePlatform'))]"
               }
          }
        }
      },
      {
          "comments": "Join WIN10 to Domain",
          "type": "Microsoft.Compute/virtualMachines/extensions",
          "name": "[concat(parameters('WIN10Prefix'), copyIndex(), '/joindomain')]",
          "apiVersion": "2019-07-01",
          "location": "[resourceGroup().location]",
          "copy":{
              "name":"WIN10VMDomainJoincopy",
              "count":"[parameters('WIN10Count')]"
          },
          "tags": {
              "displayName": "JsonADDomainExtension"
          },
          "dependsOn": [
              "[concat('Microsoft.Compute/virtualMachines/',parameters('WIN10Prefix'), copyIndex())]"
          ],
          "properties": {
              "publisher": "Microsoft.Compute",
              "type": "JsonADDomainExtension",
              "typeHandlerVersion": "1.3",
              "autoUpgradeMinorVersion": "true",
              "settings": {
                  "Name": "[parameters('domainName')]",
                  "User": "[concat(parameters('adminUserName'),'@',parameters('domainName'))]",
                  "Restart": "true",
                  "Options": "[variables('domainJoinOption')]"
              },
              "protectedSettings": {
                  "Password": "[parameters('adminPassword')]"
          }
        }
      }
    ],
    "outputs": {},
    "functions": []
  }